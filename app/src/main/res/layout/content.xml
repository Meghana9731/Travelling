    <Button
        android:id="@+id/button"
        android:layout_width="115dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/t12"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/button1"
        android:layout_width="115dp"
        android:layout_height="82dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:background="@drawable/t5"
        android:textColor="@color/colorPrimaryDark" />

    <com.denzcoskun.imageslider.ImageSlider

        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:layout_below="@+id/button"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="23dp"
        android:scrollbarFadeDuration="15000"
        app:auto_cycle="true"
        app:corner_radius="5"
        app:delay="0"
        app:error_image="@drawable/download"
        app:period="5000"
        app:placeholder="@drawable/download">

    </com.denzcoskun.imageslider.ImageSlider>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView23"
        android:layout_toRightOf="@+id/textView23"
        android:background="@drawable/roundd"
        android:gravity="center_horizontal"
        android:text="Goods"
        android:textAlignment="center"
        android:textColor="#DE0448F4"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/roundd"
        android:text="Travel"
        android:textAlignment="center"
        android:textColor="#DE0448F4"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="30dp" />


</RelativeLayout>