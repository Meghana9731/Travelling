<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.antixiansoftware.travelling.Travel.TravelVehicalsActivity"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:ignore="MissingConstraints" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:labelFor="@id/toolbar3"
        android:id="@+id/sc1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">





            <com.denzcoskun.imageslider.ImageSlider

                android:id="@+id/image_slider"
                android:layout_width="414dp"
                android:layout_height="220dp"
                android:layout_below="@id/sc1"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="23dp"
                app:auto_cycle="true"
                android:scrollbarFadeDuration="15000"
                app:corner_radius="5"
                app:delay="0"
                app:error_image="@drawable/download"
                app:period="5000"
                app:placeholder="@drawable/download">

            </com.denzcoskun.imageslider.ImageSlider>


            <TextView
                android:id="@+id/textView1"
                android:layout_width="379dp"
                android:layout_height="30dp"
                android:layout_below="@+id/image_slider"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:hint="Name of the Driver"
                android:paddingTop="10dp"
                android:textColorHint="@color/colorPrimaryDark"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="379dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textView1"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:hint="Vehical Name"
                android:paddingTop="10dp"
                android:textColorHint="@color/colorPrimaryDark"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="379dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textView2"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:hint="Seating Capacity"
                android:paddingTop="10dp"
                android:textColorHint="@color/colorPrimaryDark"
                tools:ignore="NotSibling" />



            <TextView
                android:id="@+id/textView4"
                android:layout_width="379dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textView3"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:hint="Rate/km"
                android:paddingTop="10dp"
                android:textColorHint="@color/colorPrimaryDark"
                tools:ignore="NotSibling" />

            <RatingBar
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/image_slider"
                android:layout_marginStart="70dp"
                android:scaleX=".6"
                android:scaleY=".6"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/button44"
                android:layout_width="117dp"
                android:layout_height="51dp"
                android:layout_below="@+id/ratingBar2"
                android:layout_marginStart="130dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/button77"
                android:layout_toRightOf="@+id/button77"
                android:background="@drawable/by_round"
                android:gravity="center"
                android:text="Book Now"
                android:textAlignment="center" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>